function [D, h, m,x,y_n]=deg_dist(A,plot_flag)
% [D, h, m,c,x,y_n]=deg_dist(A,plot_flag)
% A - adjacency matrix
% plot_flag = 1 if you want a figure.
% 
% D - degree array. 
% h - degree index. 
% p - degree distribution (empirical).
% m - power law coefficient
% x - log scale for degree probs
% y_n log scale for distribution

D = sum(A);
%D = D/mean(D);
h=hist(D,[1:full(max(D))]);


x = log([1:full(max(D))]);
y = log(h);
% ignore -inf points (where there was no degree observed).
sift = y ~=-Inf;
y=y(sift)';
x=x(sift)';
X = [x ]; % ones(size(x))];
theta = inv(X'*X)*X'*y;
m=theta(1);
c=theta(2);

x = log([1:full(max(D))]);
y_n = exp(m*x+c);

if plot_flag 
	xlabel('\it{k}');
	ylabel('it{p}');
	figure
	loglog([1:full(max(D))],h);
	xlabel('\it{k}');
	ylabel('Frequency');
	grid on
	hold on
	loglog([1:full(max(D))],y_n,'r--');
	legend('Data',['Best fit (\alpha=' num2str(m,2) '; c =' num2str(c,2) ')']);
end

